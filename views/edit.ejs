                        <input type="text" name="year" class="form-control" placeholder="Enter movie year"  value="<%= content.year %>" required>
                        <label for="author_name">Genre</label>
                        <input type="text" name="genres" class="form-control" placeholder="Enter movie genres"  value="<%= content.genres %>" required>
                        <label for="author_name">Director</label>
